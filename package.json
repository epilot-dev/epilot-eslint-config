{
  "name": "@epilot/eslint-config",
  "version": "3.0.5",
  "description": "eslint package for node projects",
  "scripts": {
    "test": "yarn lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "updtr": "yarn upgrade-interactive --latest",
    "prerelease": "yarn test",
    "release": "standard-version",
    "postrelease": "git push && git push --tags"
  },
  "files": [
    "index.mjs",
    "eslint.config.mjs"
  ],
  "main": "index.mjs",
  "repository": "https://github.com/epilot-dev/epilot-eslint-config",
  "homepage": "https://github.com/epilot-dev/epilot-eslint-config",
  "author": {
    "name": "epilot GmbH",
    "email": "info@epilot.cloud",
    "url": "https://epilot.cloud"
  },
  "license": "MIT",
  "keywords": [
    "eslint"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "eslint": ">= 9.0.0",
    "typescript": ">= 5.0.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "prettier": "3.3.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "eslint": "9.8.0",
    "globals": "^15.9.0",
    "standard-version": "9.5.0",
    "typescript": "5.5.4"
  }
}
