{
  "name": "@epilot/eslint-config",
  "version": "2.0.0",
  "description": "eslint package for node projects",
  "scripts": {
    "test": "yarn lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "updtr": "yarn upgrade-interactive --latest",
    "prerelease": "yarn test",
    "release": "standard-version",
    "postrelease": "git push && git push --tags"
  },
  "files": [
    "index.js",
    ".eslintrc.js"
  ],
  "main": "index.js",
  "repository": "https://github.com/epilot-dev/epilot-eslint-config",
  "homepage": "https://github.com/epilot-dev/epilot-eslint-config",
  "author": {
    "name": "epilot GmbH",
    "email": "info@epilot.cloud",
    "url": "https://epilot.cloud"
  },
  "license": "MIT",
  "keywords": [
    "eslint"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "eslint": ">= 7.0.0",
    "typescript": ">= 3.9.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.7.1"
  },
  "devDependencies": {
    "eslint": "8.18.0",
    "standard-version": "9.5.0",
    "typescript": "4.7.4"
  }
}
